var w = r.plan.scalex,
    h = r.left.scalex,
    d = r.plan.scaley,
    dw = 50*(w-1),
    dh = 50*(h-1),
    dd = 50*(d-1)

r.top.scalex = w
r.top.scaley = h
r.top.y = -dh -dd
r.bottom.scalex = w
r.bottom.scaley = h
r.bottom.y = dh + dd

r.left.scalex = h
r.left.scaley = d
r.left.x = -dh - dw
r.right.scalex = h
r.right.scaley = d
r.right.x = dh + dw
